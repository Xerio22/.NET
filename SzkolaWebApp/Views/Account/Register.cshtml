@model SzkolaWebApp.Models.AccountViewModel

@section styles {
    @Styles.Render("~/Content/css/content.css")
}

<section class="site-element site-content content">
    <h2>@ViewBag.Title</h2>
    <div class="content-wrapper">
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { id = "register-form", role = "form" }))
        {
            @Html.AntiForgeryToken()

            <p class = "validation-error" id="register-credentials-error">
                @Html.DisplayFor(model => model.ErrorMessage)
            </p>
         
            <p>
                @Html.LabelFor(m => m.Credentials.Username)
                @Html.TextBoxFor(m => m.Credentials.Username, new { id = "register-username" })
                <span class="validation-error" id="register-username-error-message">
                    @Html.DisplayFor(model => model.UsernameErrorMessage)
                </span>
            </p>

            <p>
                @Html.LabelFor(m => m.Credentials.Password)
                @Html.PasswordFor(m => m.Credentials.Password, new { id = "register-password" })
                <span class="validation-error" id="register-password-error-message">
                    @Html.DisplayFor(model => model.PasswordErrorMessage)
                </span>
            </p>
            
            <p>
                <input type="submit" value="Zarejestruj">
            </p>
        }
    </div>
</section>

@section scripts {
    @Scripts.Render("~/Scripts/Validation/Account/registration_validation.js")
}